<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:animateLayoutChanges="true">
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        app:theme="@style/ToolbarTheme"
        app:popupTheme="@style/Theme.AppCompat.Light"/>
    <!--Fake shadow for pre-Lollipop-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/toolbar"
        android:foreground="?android:windowContentOverlay"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/widthContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_width"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/heightContainer"
            android:layout_below="@id/widthContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_height"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/screenSizeContainer"
            android:layout_below="@id/heightContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/screenSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_screensize"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/screenSizeContainer">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/dynamicView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    layout="@layout/view_dynamic"/>
                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/dynamicView"
                    android:text="- dpi"
                    android:textSize="24sp"
                    android:textColor="@color/standardText"
                    android:fontFamily="sans-serif-medium"/>
                </RelativeLayout>
            </ScrollView>
    </RelativeLayout>
</RelativeLayout>